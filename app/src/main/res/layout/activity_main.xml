<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.danny.justjava.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/toycoffee"
        android:layout_weight="2"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="QUANTITY"
        android:textAlignment="center"
        android:layout_marginLeft="90dp"
        android:background="@color/md_brown_400"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:padding="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="-"
        android:textSize="25dp"
        android:background="@color/md_brown_400"
        android:onClick="decrement"
        />

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        />
    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/md_brown_400"
        android:text="+"
        android:textSize="25dp"
        android:onClick="increment"
        />
    </LinearLayout>

    <TextView
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:text="PRICE"
        android:fontFamily="casual"
        android:layout_marginLeft="90dp"
        android:textStyle="bold"
        android:background="@color/md_brown_400"
        android:textColor="@android:color/black"
        android:textSize="16sp"

        />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0$"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:fontFamily="monospace"
        android:textColor="@color/md_orange_900"
        android:textSize="20sp"
        android:padding="5dp"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:onClick="submitOrder"
        android:background="@drawable/toycoffee"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order a cup"
        android:textColor="@android:color/black"
        android:layout_marginLeft="126dp"
        />

</LinearLayout>


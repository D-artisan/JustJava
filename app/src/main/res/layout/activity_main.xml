<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.danny.justjava.MainActivity"
    >

<LinearLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
   >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="monospace"
        android:text="Toppings"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/whipped_cream_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="whipped cream"
        android:layout_marginLeft="24dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/toycoffee"
        />

    <!--
    <ImageButton
        android:src="@mipmap/ic_launcher"
        android:background="@drawable/button_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"/>
        -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUANTITY"
        android:textAlignment="center"
        android:background="@color/md_black_1000"
        android:fontFamily="casual"
        android:elevation="@android:dimen/thumbnail_width"
        android:textStyle="bold"
        android:textColor="@color/md_white_1000"
        android:textSize="16sp"
        android:padding="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="95dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="-"
        android:textSize="25dp"
        android:background="@color/md_brown_400"
        android:onClick="decrement"
        />

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        />
    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/md_brown_400"
        android:text="+"
        android:textSize="25dp"
        android:onClick="increment"
        />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:padding="5dp"
        android:text="ORDER SUMMARY"
        android:fontFamily="casual"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:background="@color/md_black_1000"
        android:textColor="@android:color/white"
        android:textSize="16sp"

        />

    <TextView
        android:id="@+id/order_summary_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0$"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:fontFamily="monospace"
        android:textColor="@color/md_orange_900"
        android:textSize="15sp"
        android:padding="5dp"
        />


    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:layout_marginLeft="150dp"
        android:text="Order"
        android:textColor="@color/md_white_1000"
        android:textStyle="bold"
        android:background="@color/md_green_900"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:onClick="submitOrder"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order a cup"
        android:fontFamily="casual"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="@color/md_green_900"
        android:layout_marginLeft="150dp"
        />

</LinearLayout>

</ScrollView>